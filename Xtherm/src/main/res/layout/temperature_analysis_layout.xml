<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/temperature_analysis_layout"
    android:layout_width="@dimen/dp_62"
    android:layout_height="@dimen/dp_360"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:background="@mipmap/tempback"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/point_mode_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_72"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:scaleType="fitXY"
        android:background="@mipmap/tempback"
        android:src="@mipmap/point" />

    <ImageButton
        android:id="@+id/line_mode_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_72"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:scaleType="fitXY"
        android:background="@mipmap/tempback"
        android:src="@mipmap/line" />

    <ImageButton
        android:id="@+id/rectangle_mode_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_72"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:scaleType="fitXY"
        android:background="@mipmap/tempback"
        android:src="@mipmap/rectangle" />

    <ImageButton
        android:id="@+id/make_report_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_72"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:scaleType="fitXY"
        android:background="@mipmap/tempback"
        android:src="@mipmap/make_report" />

    <ImageButton
        android:id="@+id/change_range_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_72"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:background="@mipmap/tempback"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/range_400" />
</LinearLayout>



