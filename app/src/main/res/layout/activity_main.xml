<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".MainActivity"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/black" >

	<!-- elevation is like z-order -->
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:elevation="10dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent">

		<ImageButton
			android:id="@+id/buttonShutter"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="20dp"
			android:padding="20dp"
			android:contentDescription="@string/btn_shutter"
			android:backgroundTint="@color/white"
			android:background="@drawable/ic_baseline_camera_24" />

		<ImageButton
			android:id="@+id/buttonPhoto"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="20dp"
			android:padding="25dp"
			android:contentDescription="@string/btn_photo"
			android:backgroundTint="@color/white"
			android:background="@drawable/ic_baseline_photo_camera_24" />

		<ImageButton
			android:id="@+id/buttonPalette"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="20dp"
			android:padding="20dp"
			android:contentDescription="@string/btn_palette"
			android:backgroundTint="@color/white"
			android:background="@drawable/ic_baseline_palette_24" />

	</LinearLayout>

	<FrameLayout
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginEnd="0dp"
		android:layout_marginStart="0dp"
		android:layout_marginTop="0dp"
		app:layout_constraintDimensionRatio="4:3"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent">

		<SurfaceView android:id="@+id/cameraView"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

		<be.ntmn.inficam.MessageView android:id="@+id/message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/msg_disconnected"
			android:textAppearance="@style/TextAppearance.AppCompat.Large"
			android:textColor="@color/white"
			android:layout_gravity="center"
			android:paddingVertical="5dp"
			android:paddingHorizontal="12dp"
			android:background="@color/black" />
	</FrameLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:elevation="10dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent">

		<ImageButton
			android:id="@+id/buttonSettings"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="20dp"
			android:padding="20dp"
			android:contentDescription="@string/btn_settings"
			android:backgroundTint="@color/white"
			android:background="@drawable/ic_baseline_settings_24" />

	</LinearLayout>

	<FrameLayout
		android:id="@+id/dialogBackground"
		android:background="@color/dialogBackground"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:elevation="20dp"
		android:visibility="gone"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent">

		<ScrollView
			android:id="@+id/dialogSettings"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@color/white"
			android:layout_margin="40dp"
			android:layout_gravity="center"
			android:gravity="center">

			<be.ntmn.inficam.Settings
				android:id="@+id/settings"
				android:orientation="vertical"
				android:paddingHorizontal="20dp"
				android:paddingVertical="10dp"
				android:minWidth="200dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />

		</ScrollView>

	</FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
